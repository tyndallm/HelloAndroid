<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/gameContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/increaseCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Increase clicked: 0"/>

            <Button
                android:id="@+id/increase_score_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/increase_score_text"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/decreaseCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decrease clicked: 0"/>

            <Button
                android:id="@+id/decrease_score_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/decrease_score_text"/>


        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/win_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/win_btn_text"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
